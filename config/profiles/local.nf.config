profiles {
  local {
    process.executor = 'local'
    process.cpus = 4
    process.memory = '8 GB'
    process.errorStrategy = 'retry'
    process.maxRetries = 1
    conda.enabled = true
    conda.cacheDir = '.conda'
    apptainer.enabled = true
    apptainer.autoMounts = true
    apptainer.cacheDir = '.nextflow/singularity'
    apptainer.runOptions = '-B /data,/tmp'
    docker.enabled = false
    process.container = 'docker://rnaseq-mini:latest'
    publishDir = [
      path: 'results',
      mode: 'copy'
    ]
  }
}
